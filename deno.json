{
  "tasks": {
    "dev": "deno run -A src/index.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/index.ts",
    "test": "deno test -A"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/assert": "jsr:@std/assert@^1.0.15"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "deno.ns",
      "dom",
      "dom.iterable",
      "esnext"
    ]
  }
}
